<Window x:Class="FormRender.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Vista previa" Height="550" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <FontFamily x:Key="fntFmly">Arial</FontFamily>
        <system:Double x:Key="fntSze">14</system:Double>
    </Window.Resources>
    <DockPanel Margin="10">
        <StackPanel Margin="10" Width="80">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,0,10"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="btnPrint" Content="Imprimir"/>
            <Separator Margin="0,0,0,10"/>
            <TextBlock x:Name="lblCounter" Text="Pág. 1/3" TextAlignment="Center" Margin="0,0,0,10"/>
            <Button x:Name="btnPrev" Content=" Pág. prev."/>
            <Button x:Name="btnNext" Content=" Sig. pág."/>
        </StackPanel>
        <Viewbox>
            <Frame x:Name="frmPreview" Width="850" Height="1100"/>
        </Viewbox>
    </DockPanel>
</Window>
