<Page x:Class="FormRender.Pages.FormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="1150" d:DesignWidth="800"
	Title="FormPage">
    <Page.Resources>
        <FontFamily x:Key="fntFmly">Arial</FontFamily>
        <system:Double x:Key="fntSze">14</system:Double>        
    </Page.Resources>
    <DockPanel Background="White">
        <Image Source="/FormRender;component/Assets/header.png" DockPanel.Dock="top"/>
        <Image Source="/FormRender;component/Assets/footer.png" DockPanel.Dock="Bottom"/>
        <StackPanel x:Name="Content">
            <TextBlock x:Name="txtTitle" Text="Reporte de Histopatología" FontSize="16" HorizontalAlignment="Center"/>
            <Grid Margin="35,0">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="5,5,0,0"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                        <Setter Property="FontFamily" Value="{StaticResource fntFmly}"/>
                        <Setter Property="FontSize" Value="{StaticResource fntSze}"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="Paciente:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtPaciente"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Médico:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtMedico"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Dirección:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDireccion"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Diag. Clínico:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtDiag"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Material Estudiado:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtEstudiado"/>
                    </DockPanel>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <WrapPanel>
                        <DockPanel>
                            <TextBlock Text="Edad:" FontWeight="Bold"/>
                            <TextBlock x:Name="txtEdad" Text="9"/>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="Sexo:" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSexo" Text="M"/>
                        </DockPanel>
                    </WrapPanel>
                    <DockPanel>
                        <TextBlock Text="Fecha:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtFecha"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="Recibido:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtRecv"/>
                    </DockPanel>
                    <DockPanel>
                        <TextBlock Text="No. biopsia:" FontWeight="Bold"/>
                        <TextBlock x:Name="txtBiop"/>
                    </DockPanel>
                </StackPanel>
            </Grid>
            <TextBlock Text="INFORME" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Separator Background="Black" Height="3"/>
            <FlowDocumentScrollViewer VerticalScrollBarVisibility="Disabled" Margin="35,0">
                <FlowDocument>
                    <Paragraph
                        FontFamily="{StaticResource fntFmly}"
                        FontSize="{StaticResource fntSze}" x:Name="par">
                        <Floater HorizontalAlignment="Right" Width="250" x:Name="fltImages">
                            <Floater.Resources>
                                <Style TargetType="Image">
                                    <Setter Property="Margin" Value="10"/>
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontStyle" Value="Italic"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="Margin" Value="0,0,0,5"/>
                                </Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Background" Value="LightGray"/>
                                    <Setter Property="Margin" Value="0,10,-10,0"/>
                                </Style>
                            </Floater.Resources>
                        </Floater>                        
                    </Paragraph>                    
                </FlowDocument>
            </FlowDocumentScrollViewer>
        </StackPanel>
    </DockPanel>
</Page>
